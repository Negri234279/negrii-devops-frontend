{
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "always"
        },
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "always"
        },
        "editor.formatOnSave": true
    },
    "files.associations": {
        "*.css": "tailwindcss",
        "*.scss": "tailwindcss"
    },
}
